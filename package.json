{
  "name": "wishlist",
  "version": "1.0.0",
  "private": true,
  "description": "Wishlist application monorepo",
  "workspaces": [
    "common",
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=frontend",
    "build": "npm run build --workspace=common && npm run build --workspaces --if-present",
    "test": "npm test --workspaces",
    "frontend:dev": "npm run dev --workspace=frontend",
    "frontend:build": "npm run build --workspace=frontend",
    "backend:dev": "npm run dev --workspace=backend",
    "backend:build": "npm run build --workspace=backend",
    "backend:start": "npm run start --workspace=backend",
    "common:build": "npm run build --workspace=common",
    "common:dev": "npm run dev --workspace=common"
  },
  "devDependencies": {
    "typescript": "^5.3.0"
  },
  "author": "",
  "license": "ISC"
}
